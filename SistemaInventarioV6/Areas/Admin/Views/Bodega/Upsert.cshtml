@model SistemaInventario.Modelos.Bodega;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}

<form method="post">
    <div style="padding-left:15%; padding-right: 15%; padding-bottom:inherit.4rem">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if(Model.id != 0)
    {
        titulo = "Actualizar Bodega";
        <input type="hidden" asp-for="id" />
    }
    <div class="col-12 border-bottom p-0">
       <h2 class="text-primary">@titulo</h2>
    </div>
    
    <div class="row my-2">
        <div class="form-group col-6">
            <label>Nombre</label>
            <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre de la bodega" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label>Descripción</label>
            <input type="text" asp-for="Descripcion" class="form-control" placeholder="Descripción de la bodega" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label>Estado</label>
            <select asp-for="Estado" class="form-select">
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <br />
        <div>
            @if(Model.id != 0)
            {
                <partial name="_BotonesActualizarYRegresar" model="Model.id"></partial>
            }
            else
            {
                <partial name="_BotonesCrearYRegresar"></partial>
            }
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

